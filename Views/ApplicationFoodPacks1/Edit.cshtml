@model SocialWelfarre.Models.ApplicationFoodPack

@{
    ViewData["Title"] = "Edit Application Food Pack";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .details-section {
        margin-top: 20px;
    }

        .details-section h4 {
            margin-bottom: 20px;
            font-weight: 500;
            color: #343a40;
            display: flex;
            align-items: center;
        }

            .details-section h4 i {
                color: #007bff;
                margin-right: 10px;
            }

        .details-section .row {
            display: flex;
            flex-wrap: wrap;
        }

        .details-section .card {
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .details-section .card-body {
            padding: 15px;
        }

        .details-section h5 {
            margin-bottom: 15px;
            font-weight: 500;
            color: #343a40;
            display: flex;
            align-items: center;
        }

            .details-section h5 i {
                color: #007bff;
                margin-right: 8px;
            }

        .details-section .form-group {
            margin-bottom: 10px;
        }

        .details-section label {
            font-weight: 500;
            color: #343a40;
            margin-bottom: 5px;
            display: flex;
            align-items: center;
        }

            .details-section label i {
                color: #007bff;
                margin-right: 5px;
            }

        .details-section input[type="text"],
        .details-section input[type="number"],
        .details-section select {
            background-color: #fff;
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 8px;
            width: 100%;
            color: #495057;
            font-size: 14px;
            transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

            .details-section input[type="text"]:focus,
            .details-section input[type="number"]:focus,
            .details-section select:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
                outline: none;
            }

            .details-section input[type="text"]:hover,
            .details-section input[type="number"]:hover,
            .details-section select:hover {
                border-color: #6c757d;
            }

        .details-section img {
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 10px;
            transition: transform 0.2s ease-in-out;
            max-width: 100%;
            height: auto;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

            .details-section img:hover {
                transform: scale(1.05);
            }

    .action-buttons {
        margin-top: 20px;
        text-align: center;
    }

        .action-buttons .btn {
            margin: 0 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .action-buttons .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            }

    .document-row {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .document-item {
        text-align: center;
    }

    .custom-file-upload {
        position: relative;
        display: inline-block;
        width: 100%;
    }

        .custom-file-upload input[type="file"] {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

    .custom-file-label {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 8px 12px;
        background-color: #007bff;
        color: white;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 100%;
        text-align: center;
    }

        .custom-file-label i {
            margin-right: 8px;
        }

        .custom-file-label:hover {
            background-color: #0056b3;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            transform: translateY(-1px);
        }

        .custom-file-label:active {
            transform: translateY(1px);
        }

    .text-danger {
        margin-top: 5px;
        display: block;
        font-size: 12px;
    }
</style>

<div class="details-section">
    <h4><i class="fas fa-edit"></i> Edit Application Food Pack</h4>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <!-- Personal Information Card -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5><i class="fas fa-user"></i> Personal Information</h5>
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="FirstName"><i class="fas fa-user"></i> First Name</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" required />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MiddleName"><i class="fas fa-user"></i> Middle Name</label>
                                    <input asp-for="MiddleName" class="form-control" placeholder="Enter Middle Name" />
                                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName"><i class="fas fa-user"></i> Last Name</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" required />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Age"><i class="fas fa-birthday-cake"></i> Age</label>
                                    <input asp-for="Age" class="form-control" type="number" placeholder="Enter Age" required />
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address"><i class="fas fa-home"></i> Address</label>
                                    <input asp-for="Address" class="form-control" placeholder="Enter Address" required />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ContactNumber"><i class="fas fa-phone"></i> Contact Number</label>
                                    <input asp-for="ContactNumber" class="form-control" placeholder="Enter Contact Number" required />
                                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Application Details Card -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5><i class="fas fa-boxes"></i> Application Details</h5>
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Barangay"><i class="fas fa-map-marker-alt"></i> Barangay</label>
                                    <select asp-for="Barangay" class="form-control">
                                        <option value="">-- Select Barangay --</option>
                                        @foreach (var barangay in Html.GetEnumSelectList<Barangay>())
                                        {
                                            <option value="@barangay.Value">@barangay.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Barangay" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Packs"><i class="fas fa-boxes"></i> Number of Packs</label>
                                    <input asp-for="Packs" class="form-control" type="number" placeholder="Enter Number of Packs" required />
                                    <span asp-validation-for="Packs" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Reason"><i class="fas fa-comment"></i> Reason</label>
                                    <select asp-for="Reason" class="form-control">
                                        <option value="">-- Select Reason --</option>
                                        @foreach (var reason in Html.GetEnumSelectList<Reason>())
                                        {
                                            <option value="@reason.Value">@reason.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Reason" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Status"><i class="fas fa-info-circle"></i> Status</label>
                                    <select asp-for="Status" class="form-control">
                                        <option value="">-- Select Status --</option>
                                        @foreach (var status in Html.GetEnumSelectList<ActiveStatus>())
                                        {
                                            <option value="@status.Value">@status.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Uploaded Documents Card -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5><i class="fas fa-file-alt"></i> Uploaded Documents</h5>
                        <div class="card">
                            <div class="card-body">
                                <div class="document-row">
                                    <!-- Barangay Certificate -->
                                    <div class="document-item">
                                        <label for="brgyCertFile"><i class="fas fa-file-alt"></i> Barangay Certificate (Optional)</label>
                                        <div class="custom-file-upload">
                                            <input type="file" name="brgyCertFile" id="brgyCertFile" accept=".jpg,.jpeg,.png,.pdf" />
                                            <label for="brgyCertFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                                        </div>
                                        <span asp-validation-for="Brgy_Cert" class="text-danger"></span>
                                        @if (!string.IsNullOrEmpty(Model.Brgy_Cert_Path))
                                        {
                                            <p>
                                                Current file:
                                                @{
                                                    var extension = System.IO.Path.GetExtension(Model.Brgy_Cert_Path)?.ToLower();
                                                    if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                                                    {
                                                        <img src="@Url.Content(Model.Brgy_Cert_Path)" alt="Barangay Certificate" width="150" />
                                                    }
                                                    else
                                                    {
                                                        <span>Non-image file</span>
                                                    }
                                                }
                                            </p>
                                        }
                                    </div>

                                    <!-- Valid ID -->
                                    <div class="document-item">
                                        <label for="validIdFile"><i class="fas fa-id-card"></i> Valid ID (Optional)</label>
                                        <div class="custom-file-upload">
                                            <input type="file" name="validIdFile" id="validIdFile" accept=".jpg,.jpeg,.png,.pdf" />
                                            <label for="validIdFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                                        </div>
                                        <span asp-validation-for="Valid_ID" class="text-danger"></span>
                                        @if (!string.IsNullOrEmpty(Model.Valid_ID_Path))
                                        {
                                            <p>
                                                Current file:
                                                @{
                                                    var extension = System.IO.Path.GetExtension(Model.Valid_ID_Path)?.ToLower();
                                                    if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                                                    {
                                                        <img src="@Url.Content(Model.Valid_ID_Path)" alt="Valid ID" width="150" />
                                                    }
                                                    else
                                                    {
                                                        <span>Non-image file</span>
                                                    }
                                                }
                                            </p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Update the label text to show the selected file name
        document.querySelectorAll('.custom-file-upload input[type="file"]').forEach(input => {
            input.addEventListener('change', function () {
                const label = this.nextElementSibling;
                const fileName = this.files.length > 0 ? this.files[0].name : 'Choose File';
                label.innerHTML = `<i class="fas fa-upload"></i> ${fileName}`;
            });
        });
    </script>
}