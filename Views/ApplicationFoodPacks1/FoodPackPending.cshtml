@model SocialWelfarre.Models.ApplicationFoodPack

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create - ApplicationFoodPack</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-5">
        <h1 class="mb-4">Create Application</h1>

        <div class="card shadow">
            <div class="card-body">
                <h4 class="card-title mb-4">ApplicationFoodPack</h4>

                <form asp-action="FoodPackPending" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MiddleName" class="form-label"></label>
                        <input asp-for="MiddleName" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Packs" class="form-label"></label>
                        <input asp-for="Packs" class="form-control" />
                        <span asp-validation-for="Packs" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Age" class="form-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Barangay" class="form-label"></label>
                        <select asp-for="Barangay" class="form-select" asp-items="Html.GetEnumSelectList<SocialWelfarre.Models.Barangay>()">
                            <option value="">Select Barangay</option>
                        </select>
                        <span asp-validation-for="Barangay" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ContactNumber" class="form-label"></label>
                        <input asp-for="ContactNumber" class="form-control" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="brgyCertFile" class="form-label">Upload Barangay Certificate</label>
                        <input type="file" name="brgyCertFile" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label for="validIdFile" class="form-label">Upload Valid ID</label>
                        <input type="file" name="validIdFile" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Reason" class="form-label"></label>
                        <select asp-for="Reason" class="form-select" asp-items="Html.GetEnumSelectList<SocialWelfarre.Models.Reason>()">
                            <option value="">Select Reason</option>
                        </select>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>

                <div class="mt-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>

                </div>

            </div>
        </div>

    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>