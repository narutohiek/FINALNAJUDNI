@model SocialWelfarre.Models.ApplicationFoodPack

@{
    ViewData["Title"] = "Application Details";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .details-section {
        margin-top: 20px;
    }

        .details-section h4 {
            margin-bottom: 20px;
            font-weight: 500;
            color: #343a40;
            display: flex;
            align-items: center;
        }

            .details-section h4 i {
                color: #007bff;
                margin-right: 10px;
            }

        .details-section .row {
            display: flex;
            flex-wrap: wrap;
        }

        .details-section .card {
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .details-section .card-body {
            padding: 15px;
        }

        .details-section h5 {
            margin-bottom: 15px;
            font-weight: 500;
            color: #343a40;
            display: flex;
            align-items: center;
        }

            .details-section h5 i {
                color: #007bff;
                margin-right: 8px;
            }

        .details-section .form-group {
            margin-bottom: 10px;
        }

        .details-section label {
            font-weight: 500;
            color: #343a40;
            margin-bottom: 5px;
            display: flex;
            align-items: center;
        }

            .details-section label i {
                color: #007bff;
                margin-right: 5px;
            }

        .details-section input[type="text"] {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 8px;
            width: 100%;
            color: #495057;
            font-size: 14px;
        }

        .details-section img {
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 10px;
            transition: transform 0.2s ease-in-out;
            max-width: 100%;
            height: auto;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

            .details-section img:hover {
                transform: scale(1.05);
            }

    .action-buttons {
        margin-top: 20px;
        text-align: center;
    }

        .action-buttons .btn {
            margin: 0 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .action-buttons .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            }
</style>

<div class="details-section">
    <h4><i class="fas fa-info-circle"></i> Application Details</h4>

    <div class="row">
        <!-- Personal Information Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5><i class="fas fa-user"></i> Personal Information</h5>
                    <div class="card">
                        <div class="card-body">
                    <div class="form-group">
                        <label><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.FirstName)</label>
                        <input type="text" value="@Model.FirstName" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.MiddleName)</label>
                        <input type="text" value="@Model.MiddleName" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.LastName)</label>
                        <input type="text" value="@Model.LastName" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-birthday-cake"></i> @Html.DisplayNameFor(model => model.Age)</label>
                        <input type="text" value="@Model.Age" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.ContactNumber)</label>
                        <input type="text" value="@Model.ContactNumber" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-home"></i> @Html.DisplayNameFor(model => model.Address)</label>
                        <input type="text" value="@Model.Address" readonly class="form-control" />
                    </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Application Details Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5><i class="fas fa-boxes"></i> Application Details</h5>
                    <div class="card">
                        <div class="card-body">
                    <div class="form-group">
                        <label><i class="fas fa-boxes"></i> @Html.DisplayNameFor(model => model.Packs)</label>
                        <input type="text" value="@Model.Packs" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.Barangay)</label>
                        <input type="text" value="@Model.Barangay" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-comment"></i> @Html.DisplayNameFor(model => model.Reason)</label>
                        <input type="text" value="@Model.Reason" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><i class="fas fa-info-circle"></i> @Html.DisplayNameFor(model => model.Status)</label>
                        <input type="text" value="@Model.Status" readonly class="form-control" />
                    </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Uploaded Documents Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5><i class="fas fa-file-alt"></i> Uploaded Documents</h5>
                    <div class="form-group">
                        <div class="card">
                            <div class="card-body">
                        <label><i class="fas fa-file-alt"></i> Barangay Certificate</label>
                                <div class="card">
                                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Brgy_Cert_Path))
                        {
                            var extension = System.IO.Path.GetExtension(Model.Brgy_Cert_Path)?.ToLower();
                            if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                            {
                                <img src="@Url.Content(Model.Brgy_Cert_Path)" alt="@Model.Brgy_Cert" width="200" />
                            }
                            else
                            {
                                <input type="text" value="Non-image file: @Model.Brgy_Cert" readonly class="form-control" />
                            }
                        }
                        else
                        {
                            <input type="text" value="No file uploaded" readonly class="form-control" />
                        }
                    </div>
                       </div>
                            </div>
                    <div class="form-group">
                        <label><i class="fas fa-id-card"></i> Valid ID</label>
                                <div class="card">
                                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Valid_ID_Path))
                        {
                            var extension = System.IO.Path.GetExtension(Model.Valid_ID_Path)?.ToLower();
                            if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                            {
                                <img src="@Url.Content(Model.Valid_ID_Path)" alt="@Model.Valid_ID" width="200" />
                            }
                            else
                            {
                                <input type="text" value="Non-image file: @Model.Valid_ID" readonly class="form-control" />
                            }
                        }
                        else
                        {
                            <input type="text" value="No file uploaded" readonly class="form-control" />
                        }
                    </div>
                </div>
                  </div>
                        </div>
                   </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </div>
</div>