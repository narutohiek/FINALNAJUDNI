@model SocialWelfarre.Models.DisasterKitTransaction

@{
    ViewData["Title"] = "Delete Disaster Kit Transaction";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .details-section {
        margin-top: 20px;
    }

        .details-section h4 {
            margin-bottom: 20px;
            font-weight: 500;
            color: #343a40;
            display: flex;
            align-items: center;
        }

            .details-section h4 i {
                color: #007bff;
                margin-right: 10px;
            }

        .details-section .row {
            display: flex;
            flex-wrap: wrap;
        }

        .details-section .card {
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .details-section .card-body {
            padding: 15px;
        }

        .details-section h5 {
            margin-bottom: 15px;
            font-weight: 500;
            color: #343a40;
            display: flex;
            align-items: center;
        }

            .details-section h5 i {
                color: #007bff;
                margin-right: 8px;
            }

        .details-section .form-group {
            margin-bottom: 10px;
        }

        .details-section label {
            font-weight: 500;
            color: #343a40;
            margin-bottom: 5px;
            display: flex;
            align-items: center;
        }

            .details-section label i {
                color: #007bff;
                margin-right: 5px;
            }

        .details-section input[type="text"] {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 8px;
            width: 100%;
            color: #495057;
            font-size: 14px;
        }

    .action-buttons {
        margin-top: 20px;
        text-align: center;
    }

        .action-buttons .btn {
            margin: 0 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .action-buttons .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            }

    .confirmation-message {
        color: #dc3545;
        font-weight: 500;
        margin-bottom: 20px;
        text-align: center;
    }
</style>

<div class="details-section">
    <h4><i class="fas fa-trash-alt"></i> Delete Disaster Kit Transaction</h4>
    <div class="confirmation-message">
        Are you sure you want to delete this transaction record?
    </div>

    <div class="row">
        <!-- Transaction Details Card -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5><i class="fas fa-boxes"></i> Transaction Details</h5>
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label><i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.Barangay)</label>
                                <input type="text" value="@Model.Barangay" readonly class="form-control" />
                            </div>
                            <div class="form-group">
                                <label><i class="fas fa-boxes"></i> @Html.DisplayNameFor(model => model.NumberOfPacks)</label>
                                <input type="text" value="@Model.NumberOfPacks" readonly class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Information Card -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5><i class="fas fa-info-circle"></i> Additional Information</h5>
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label><i class="fas fa-comment"></i> @Html.DisplayNameFor(model => model.Reason)</label>
                                <input type="text" value="@Model.Reason" readonly class="form-control" />
                            </div>
                            <div class="form-group">
                                <label><i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.TransactionDate)</label>
                                <input type="text" value="@Model.TransactionDate" readonly class="form-control" />
                            </div>
                            <div class="form-group">
                                <label><i class="fas fa-clock"></i> @Html.DisplayNameFor(model => model.TransactionTime)</label>
                                <input type="text" value="@Model.TransactionTime" readonly class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <form asp-action="Delete" style="display: inline;">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </div>
</div>