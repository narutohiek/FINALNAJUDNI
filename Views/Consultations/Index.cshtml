@model IEnumerable<SocialWelfarre.Models.Consultation>

@{
    ViewData["Title"] = "Consultation Records";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .form-select {
        border-radius: 8px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ced4da;
        transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
            outline: none;
        }

        .form-select:hover {
            border-color: #6c757d;
        }

    .form-group label {
        font-weight: 500;
        color: #343a40;
        margin-bottom: 8px;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-group {
        flex: 1;
        min-width: 200px;
    }

        /* Style for the icons to make them blue */
        .form-group label i {
            color: #007bff;
            margin-right: 5px;
        }

    /* Custom file input styling */
    .custom-file-upload {
        position: relative;
        display: inline-block;
        width: 100%;
    }

        .custom-file-upload input[type="file"] {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

    .custom-file-label {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 100%;
        text-align: center;
    }

        .custom-file-label i {
            margin-right: 8px;
        }

        .custom-file-label:hover {
            background-color: #0056b3;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            transform: translateY(-1px);
        }

        .custom-file-label:active {
            transform: translateY(1px);
        }

    /* Ensure validation messages align with the custom styling */
    .text-danger {
        margin-top: 5px;
        display: block;
    }
</style>

<!-- Consultation Records Card -->
<div class="card">
    <div class="card-body">
        <!-- Add Consultation Form Section -->
        <div class="form-section">
            <h4><i class="fas fa-plus-circle"></i> Add New Consultation</h4>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().First_Name)" class="form-label"><i class="fas fa-user"></i> First Name</label>
                        <input asp-for="@(new SocialWelfarre.Models.Consultation().First_Name)" class="form-control" placeholder="Enter First Name" required />
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().First_Name)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().Middle_Name)" class="form-label"><i class="fas fa-user"></i> Middle Name</label>
                        <input asp-for="@(new SocialWelfarre.Models.Consultation().Middle_Name)" class="form-control" placeholder="Enter Middle Name" required />
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Middle_Name)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().Last_Name)" class="form-label"><i class="fas fa-user"></i> Last Name</label>
                        <input asp-for="@(new SocialWelfarre.Models.Consultation().Last_Name)" class="form-control" placeholder="Enter Last Name" required />
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Last_Name)" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="brgyCertFile"><i class="fas fa-file-alt"></i> Barangay Certificate</label>
                        <div class="custom-file-upload">
                            <input type="file" name="brgyCertFile" id="brgyCertFile" accept=".jpg,.jpeg,.png,.pdf" required />
                            <label for="brgyCertFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                        </div>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Brgy_Cert)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="proofSoloParentFile"><i class="fas fa-file-alt"></i> Proof of Solo Parent</label>
                        <div class="custom-file-upload">
                            <input type="file" name="proofSoloParentFile" id="proofSoloParentFile" accept=".jpg,.jpeg,.png,.pdf" required />
                            <label for="proofSoloParentFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                        </div>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Proof_SoloParent)" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="birthCertFile"><i class="fas fa-file-alt"></i> Birth Certificate</label>
                        <div class="custom-file-upload">
                            <input type="file" name="birthCertFile" id="birthCertFile" accept=".jpg,.jpeg,.png,.pdf" required />
                            <label for="birthCertFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                        </div>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Birth_Cert)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="validIdFile"><i class="fas fa-id-card"></i> Valid ID</label>
                        <div class="custom-file-upload">
                            <input type="file" name="validIdFile" id="validIdFile" accept=".jpg,.jpeg,.png,.pdf" required />
                            <label for="validIdFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                        </div>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Valid_ID)" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="x1PicFile"><i class="fas fa-image"></i> 1x1 Picture</label>
                        <div class="custom-file-upload">
                            <input type="file" name="x1PicFile" id="x1PicFile" accept=".jpg,.jpeg,.png,.pdf" required />
                            <label for="x1PicFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                        </div>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().x1_Pic)" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().Consultation_Date)" class="form-label"><i class="fas fa-calendar-alt"></i> Consultation Date</label>
                        <input asp-for="@(new SocialWelfarre.Models.Consultation().Consultation_Date)" class="form-control" type="date" required />
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Consultation_Date)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().Consultation_Time)" class="form-label"><i class="fas fa-clock"></i> Consultation Time</label>
                        <input asp-for="@(new SocialWelfarre.Models.Consultation().Consultation_Time)" class="form-control" type="time" required />
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Consultation_Time)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().Consultation_status)" class="form-label"><i class="fas fa-info-circle"></i> Consultation Status</label>
                        <select asp-for="@(new SocialWelfarre.Models.Consultation().Consultation_status)" class="form-select">
                            <option value="">-- Select Status --</option>
                            @foreach (var status in Html.GetEnumSelectList<SocialWelfarre.Models.ActiveStatus2>())
                            {
                                <option value="@status.Value">@status.Text</option>
                            }
                        </select>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Consultation_status)" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3"><i class="fas fa-save"></i> Add Consultation</button>
            </form>
        </div>

        <!-- Consultation Table Section -->
        <div class="table-section mt-4">
            <table id="example1" class="table table-striped">
                <thead>
                    <tr>
                        <th><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.FullName)</th>
                        <th><i class="fas fa-file-alt"></i> @Html.DisplayNameFor(model => model.Brgy_Cert_Path)</th>
                        <th><i class="fas fa-file-alt"></i> @Html.DisplayNameFor(model => model.Proof_SoloParent_Path)</th>
                        <th><i class="fas fa-file-alt"></i> @Html.DisplayNameFor(model => model.Birth_Cert_Path)</th>
                        <th><i class="fas fa-id-card"></i> @Html.DisplayNameFor(model => model.Valid_ID_Path)</th>
                        <th><i class="fas fa-image"></i> @Html.DisplayNameFor(model => model.x1_Pic_Path)</th>
                        <th><i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.Consultation_Date)</th>
                        <th><i class="fas fa-clock"></i> @Html.DisplayNameFor(model => model.Consultation_Time)</th>
                        <th><i class="fas fa-info-circle"></i> @Html.DisplayNameFor(model => model.Consultation_status)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Brgy_Cert_Path))
                                {
                                    var extension = System.IO.Path.GetExtension(item.Brgy_Cert_Path)?.ToLower();
                                    if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                                    {
                                        <img src="@Url.Content(item.Brgy_Cert_Path)" alt="@item.Brgy_Cert" width="100" />
                                    }
                                    else
                                    {
                                        <span>Non-image file</span>
                                    }
                                }
                                else
                                {
                                    <span>No file</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Proof_SoloParent_Path))
                                {
                                    var extension = System.IO.Path.GetExtension(item.Proof_SoloParent_Path)?.ToLower();
                                    if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                                    {
                                        <img src="@Url.Content(item.Proof_SoloParent_Path)" alt="@item.Proof_SoloParent" width="100" />
                                    }
                                    else
                                    {
                                        <span>Non-image file</span>
                                    }
                                }
                                else
                                {
                                    <span>No file</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Birth_Cert_Path))
                                {
                                    var extension = System.IO.Path.GetExtension(item.Birth_Cert_Path)?.ToLower();
                                    if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                                    {
                                        <img src="@Url.Content(item.Birth_Cert_Path)" alt="@item.Birth_Cert" width="100" />
                                    }
                                    else
                                    {
                                        <span>Non-image file</span>
                                    }
                                }
                                else
                                {
                                    <span>No file</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Valid_ID_Path))
                                {
                                    var extension = System.IO.Path.GetExtension(item.Valid_ID_Path)?.ToLower();
                                    if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                                    {
                                        <img src="@Url.Content(item.Valid_ID_Path)" alt="@item.Valid_ID" width="100" />
                                    }
                                    else
                                    {
                                        <span>Non-image file</span>
                                    }
                                }
                                else
                                {
                                    <span>No file</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.x1_Pic_Path))
                                {
                                    var extension = System.IO.Path.GetExtension(item.x1_Pic_Path)?.ToLower();
                                    if (!string.IsNullOrEmpty(extension) && (extension == ".jpg" || extension == ".jpeg" || extension == ".png"))
                                    {
                                        <img src="@Url.Content(item.x1_Pic_Path)" alt="@item.x1_Pic" width="100" />
                                    }
                                    else
                                    {
                                        <span>Non-image file</span>
                                    }
                                }
                                else
                                {
                                    <span>No file</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Consultation_Date)</td>
                            <td>@Html.DisplayFor(modelItem => item.Consultation_Time)</td>
                            <td>@Html.DisplayFor(modelItem => item.Consultation_status)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-action"><i class="fa fa-edit"></i> Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-action"><i class="fa fa-eye"></i> View</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-action"><i class="fa fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Update the label text to show the selected file name
        document.querySelectorAll('.custom-file-upload input[type="file"]').forEach(input => {
            input.addEventListener('change', function () {
                const label = this.nextElementSibling;
                const fileName = this.files.length > 0 ? this.files[0].name : 'Choose File';
                label.innerHTML = `<i class="fas fa-upload"></i> ${fileName}`;
            });
        });
    </script>
}