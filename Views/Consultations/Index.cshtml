@model IEnumerable<SocialWelfarre.Models.Consultation>

@{
    ViewData["Title"] = "Schedule Consultation";
    Layout = "/Views/Shared/_DashboardLayout.cshtml";
}
<style>
    .form-select {
        border-radius: 8px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ced4da;
        transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
            outline: none;
        }

        .form-select:hover {
            border-color: #6c757d;
        }

    .form-group label {
        font-weight: 500;
        color: #343a40;
        margin-bottom: 8px;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-group {
        flex: 1;
        min-width: 200px;
    }

        /* Style for the icons to make them blue */
        .form-group label i {
            color: #007bff;
            margin-right: 5px;
        }

    /* Custom file input styling */
    .custom-file-upload {
        position: relative;
        display: inline-block;
        width: 100%;
    }

        .custom-file-upload input[type="file"] {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

    .custom-file-label {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 100%;
        text-align: center;
    }

        .custom-file-label i {
            margin-right: 8px;
        }

        .custom-file-label:hover {
            background-color: #0056b3;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            transform: translateY(-1px);
        }

        .custom-file-label:active {
            transform: translateY(1px);
        }

    /* Ensure validation messages align with the custom styling */
    .text-danger {
        margin-top: 5px;
        display: block;
    }
</style>

<div class="card">
    <div class="card-body">
        <!-- Add Application Form Section -->
        <div class="form-section">
            <h4><i class="fas fa-plus-circle"></i> Schedule Consultation</h4>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().First_Name)" class="form-label"><i class="fas fa-user"></i> First Name</label>
                        <input asp-for="@(new SocialWelfarre.Models.Consultation().First_Name)" class="form-control" placeholder="Enter First Name" required />
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().First_Name)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().Middle_Name)" class="form-label"><i class="fas fa-user"></i> Middle Name</label>
                        <input asp-for="@(new SocialWelfarre.Models.Consultation().Middle_Name)" class="form-control" placeholder="Enter Middle Name" />
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Middle_Name)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().Last_Name)" class="form-label"><i class="fas fa-user"></i> Last Name</label>
                        <input asp-for="@(new SocialWelfarre.Models.Consultation().Last_Name)" class="form-control" placeholder="Enter Last Name" required />
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Last_Name)" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="brgyCertFile"><i class="fas fa-file-alt"></i> Barangay Certificate</label>
                        <div class="custom-file-upload">
                            <input type="file" name="brgyCertFile" id="brgyCertFile" accept=".jpg,.jpeg,.png,.pdf" required />
                            <label for="brgyCertFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                        </div>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Brgy_Cert)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="SoloParentFile"><i class="fas fa-file-alt"></i> Solo Parent Proof</label>
                        <div class="custom-file-upload">
                            <input type="file" name="SoloParentFile" id="brgyCertFile" accept=".jpg,.jpeg,.png,.pdf" required />
                            <label for="SoloParentFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                        </div>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Proof_SoloParent)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="birthCertFile"><i class="fas fa-file-alt"></i> Birth Certificate</label>
                        <div class="custom-file-upload">
                            <input type="file" name="birthCertFile" id="brgyCertFile" accept=".jpg,.jpeg,.png,.pdf" required />
                            <label for="birthCertFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                        </div>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Birth_Cert)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="validIdFile"><i class="fas fa-id-card"></i> Valid ID</label>
                        <div class="custom-file-upload">
                            <input type="file" name="validIdFile" id="validIdFile" accept=".jpg,.jpeg,.png,.pdf" required />
                            <label for="validIdFile" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                        </div>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Valid_ID)" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="1by1File"><i class="fas fa-id-card"></i> 1x1 Picture</label>
                        <div class="custom-file-upload">
                            <input type="file" name="1by1File" id="1by1File" accept=".jpg,.jpeg,.png,.pdf" required />
                            <label for="1by1File" class="custom-file-label"><i class="fas fa-upload"></i> Choose File</label>
                        </div>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().x1_Pic)" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().Consulatation_Date)" class="form-label"><i class="fas fa-clock"></i> Consultation Date</label>
                        <input asp-for="@(new SocialWelfarre.Models.Consultation().Consulatation_Date)" class="form-control" type="date" required />
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Consulatation_Date)" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().Consultation_Time)" class="form-label"><i class="fas fa-clock"></i> Consultation Time</label>
                        <input asp-for="@(new SocialWelfarre.Models.Consultation().Consultation_Time)" class="form-control" type="time" required />
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Consultation_Time)" class="text-danger"></span>
                    </div>
                
                    <div class="form-group col-sm-1">
                        <label asp-for="@(new SocialWelfarre.Models.Consultation().Consultation_status)" class="form-label"><i class="fas fa-info-circle"></i> Status</label>
                        <select asp-for="@(new SocialWelfarre.Models.Consultation().Consultation_status)" class="form-select">
                            <option value="">-- Select Status --</option>
                            @foreach (var status in Html.GetEnumSelectList<ActiveStatus2>())
                            {
                                <option value="@status.Value">@status.Text</option>
                            }
                        </select>
                        <span asp-validation-for="@(new SocialWelfarre.Models.Consultation().Consultation_status)" class="text-danger"></span>
                    </div>
                </div>
             
                <button type="submit" class="btn btn-primary mt-1"><i class="fas fa-save"></i> Schedule Now</button>
            </form>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brgy_Cert)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brgy_Cert_Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proof_SoloParent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proof_SoloParent_Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birth_Cert)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birth_Cert_Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valid_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valid_ID_Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.x1_Pic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.x1_Pic_Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consulatation_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation_status)
            </th>
            <th></th>
        </tr>
     
    </thead>
    <tbody>
   
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brgy_Cert)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brgy_Cert_Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proof_SoloParent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proof_SoloParent_Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birth_Cert)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birth_Cert_Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valid_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valid_ID_Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.x1_Pic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.x1_Pic_Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consulatation_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consultation_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consultation_status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>

</div>
